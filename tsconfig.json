{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es2017",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "global.d.ts"
  ]
}